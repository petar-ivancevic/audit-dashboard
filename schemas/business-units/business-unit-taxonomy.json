  "required": ["organization", "hierarchy", "units"],
  "properties": {
    "organization": {
      "type": "object",
      "required": ["name", "type", "assets", "employees"],
      "properties": {
        "name": "Global Financial Services Corporation",
        "type": "Large Bank Holding Company",
        "assets": 2800000000000,
        "employees": 220000
      }
    },
    "hierarchy": {
      "type": "object",
      "required": ["levels", "structure"],
      "properties": {
        "levels": {
          "type": "array",
          "items": [
            {"type": "string", "const": "Enterprise"},
            {"type": "string", "const": "Division"},
            {"type": "string", "const": "Business Unit"},
            {"type": "string", "const": "Department"},
            {"type": "string", "const": "Function"}
          ]
        },
        "structure": {
          "type": "object",
          "properties": {
            "coreBanking": {
              "name": "Core Banking Division",
              "description": "Primary customer-facing banking operations",
              "units": ["consumer-banking", "commercial-banking", "investment-banking", "wealth-management", "treasury"]
            },
            "supportOperations": {
              "name": "Support & Operations Division",
              "description": "Internal support and operational functions",
              "units": ["operations-tech", "human-resources", "corporate-real-estate", "vendor-management", "legal-compliance"]
