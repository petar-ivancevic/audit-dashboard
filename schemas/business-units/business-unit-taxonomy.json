            "geographicRegions": {
              "name": "Geographic Operations Division",
              "description": "Regional market operations",
              "units": ["northeast-region", "southeast-region", "west-coast-region", "international", "digital-banking"]
            }
          }
        }
      }
    },
    "units": {
      "type": "array",
      "minItems": 15,
      "maxItems": 15,
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "division", "description", "characteristics"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "category": {"type": "string", "enum": ["core-banking", "support-operations", "geographic-region"]},
          "division": {"type": "string"},
          "description": {"type": "string"},
          "characteristics": {
            "type": "object",
            "required": ["headcount", "revenue", "assets", "riskProfile", "regulatoryFocus", "complexity"],
            "properties": {
              "headcount": {"type": "integer", "minimum": 100},
              "revenue": {"type": "number", "minimum": 0},
              "assets": {"type": "number", "minimum": 0},
              "riskProfile": {"type": "string", "enum": ["high", "medium-high", "medium", "medium-low", "low"]},
              "regulatoryFocus": {"type": "boolean"},
              "complexity": {"type": "string", "enum": ["very-high", "high", "medium", "low"]},
              "auditFrequency": {"type": "string", "enum": ["continuous", "quarterly", "semi-annual", "annual"]},
              "keyRisks": {"type": "array", "items": {"type": "string"}},
              "primaryRegulators": {"type": "array", "items": {"type": "string"}},
              "customerTypes": {"type": "array", "items": {"type": "string"}},
              "products": {"type": "array", "items": {"type": "string"}},
              "geographicScope": {"type": "string"},
              "technologyStack": {"type": "string"},
              "dataVolume": {"type": "string", "enum": ["very-high", "high", "medium", "low"]}
